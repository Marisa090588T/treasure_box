<div class="container">
  <% items = [] %>

  <h2>Your listed items</h2>
  <div class="dashboard-container">
    <% if current_user.item_listings.present? %>
      <table>
        <thead>
          <tr class="table-headings">
            <th>Item</th>
            <th>Description</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.item_listings.each do |item| %>
          <tr class="item-list">
            <th><%= item.item_name %></th>
            <th><%= item.description %></th>
            <th>$<%= item.price %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>

  <br>

  <h2>Your Investment</h2>
  <div class="dashboard-container">
    <% if current_user.stores.present? %>
      <table>
        <thead>
          <tr class="table-headings">
            <th>Item</th>
            <th>Description</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% current_user.stores.each do |store| %>
          <tr class="item-list">
            <th><%= store.item_listing.item_name %></th>
            <th><%= store.item_listing.description %></th>
            <th>$<%= store.item_listing.price %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
